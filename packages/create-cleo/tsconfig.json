{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "watchOptions": {
    "excludeDirectories": ["./node_modules/**", "./dist/**", "./template/**"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"],
  "exclude": ["./node_modules/**", "./dist/**", "./template/**"]
}
