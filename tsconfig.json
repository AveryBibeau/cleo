{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node16",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "sourceMap": true,
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "./dist"]
  },
  "include": ["types", "./src/@types", "./src/**/*.ts", "./src/**/*.js", "./src/**/*.tsx"],
  "exclude": ["./node_modules", "./dist", "./src/includes"]
}
